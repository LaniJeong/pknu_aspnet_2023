@model aspnet02_boardapp.Models.Board

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div style="padding: 50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">게시판 글쓰기</h4>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" value="@User.Identity.Name" />
                    @*<div class="form-group"> // 유저아이디 - 유저네임 동일해서 유저아이디는 화면 미노출 => 주석처리..
                    위에 히든으로 남겨둠! 실행화면에서 F12 누르면 히든으로 코드는 있는거 확인 가능
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" value="@User.Identity.Name" readonly />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" value="@User.Identity.Name" readonly />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label>
                        <textarea asp-for="Contents" class="form-control editor" rows="10"></textarea>
                        @*<span asp-validation-for="Contents" class="text-danger"></span>*@
                    </div>
                    <br />
                    <div class="form-group text-end">
                        <button type="submit" value="저장" class="btn btn-sm btn-primary">
                            <span class="bi bi-file-earmark-plus"></span>&nbsp;저장
                        </button>
                        <a asp-controller="Board" asp-action="Index" class="btn btn-sm btn-success">
                            <i class="bi bi-list-ol"></i>&nbsp;목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}