@model List<UserRoleModel>
@{
    ViewData["Title"] = "사용자권한할당";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var roleId = ViewBag.roleId;
}

<div style="padding: 50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">사용자권한할당</h4>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
    </div>
    <hr />
    <!-- asp-action을 추가하면 안되네~ -->
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h4>현재권한 사용자 할당/해제</h4>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="할당/해제" class="btn btn-sm btn-primary"
                       style="width:auto" />
                <a asp-action="EditRole" asp-route-id="@roleId"
                   class="btn btn-sm btn-secondary" style="width:auto">이전</a>
            </div>
        </div>
    </form>
</div>