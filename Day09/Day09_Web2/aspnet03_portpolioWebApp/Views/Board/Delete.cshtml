@model aspnet02_boardapp.Models.Board

@{
    ViewData["Title"] = "게시판 글삭제";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div style="padding: 50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">게시판 글삭제</h4>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h5 class="text-warning">삭제하시겠습니까?</h5>
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="DeletePost">
                    <input type="hidden" asp-for="Id" />
                    @*<div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" readonly />
                    </div>*@
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label>
                        <!-- Delete의 textarea가 Trumbowyg 에디터 때문에 readonly가 안됨.  -->
                        @*<textarea asp-for="Contents" class="form-control editor" rows="10" readonly="readonly"></textarea>*@
                        <p>
                            @Html.Raw(@Model.Contents)
                        </p>
                    </div>
                    <br />
                    <div class="form-group text-end">
                        <button type="submit" value="삭제" class="btn btn-sm btn-warning">
                            <span class="bi bi-trash3"></span>&nbsp;삭제
                        </button>
                        <a asp-controller="Board" asp-action="Index" class="btn btn-sm btn-success">
                            <i class="bi bi-list-ol"></i>&nbsp;목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>